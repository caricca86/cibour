<div class="col-xs-12 col-md-4 col-md-offset-4 no-pad-xs text-center">
    <div class="panel no-pad ">
        <div class="panel-body text-center log ">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                <div>
                    {% if invalid_username is defined %}
                        <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
                    {% endif %}
                    <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="text" id="username" name="username" required="required" />
                </div>
                <div class="form-group control-group" style="margin-top:40px">
                    <div class="col-lg-8 col-sm-8 col-lg-offset-2 col-sm-offset-2 text-left">
                    <button type="submit" id="_submit" name="_submit" class="btn pull-right" style="padding: 0;" title="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}">
                        {{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }} <img src="{{ asset('bundles/cticibour/images/icon_submit.png') }}">
                    </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
