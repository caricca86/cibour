{% form_theme form 'CTICibourBundle:Form:cti_form.html.twig' %}
<div class="col-xs-12 col-md-4 col-md-offset-4 no-pad-xs text-center">
    <div class="panel no-pad ">
        <div class="panel-body text-center log ">
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password form-horizontal">
                {{ form_widget(form) }}
                <div class="form-group control-group" style="margin-top:40px">
                    <div class="col-lg-8 col-sm-8 col-lg-offset-2 col-sm-offset-2 text-left">
                        <button type="submit" id="_submit" name="_submit" class="btn pull-right" style="padding: 0;" title="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}">
                            {{ 'change_password.submit'|trans({}, 'FOSUserBundle') }} <img src="{{ asset('bundles/cticibour/images/icon_submit.png') }}">
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
