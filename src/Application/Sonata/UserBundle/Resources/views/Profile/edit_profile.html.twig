{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_title %}
    {{ "title_user_account" | trans({}, 'SonataUserBundle')}} - {{ "title_user_edit_profile" | trans({}, 'SonataUserBundle')}}
{% endblock %}

{% block sonata_profile_content %}
    {{ form_errors(form) }}

    {% form_theme form 'CTICibourBundle:Form:cti_form.html.twig' %}

        <div class="panel-body col-lg-8 col-lg-offset-2">
            <h3>{{ "title_user_account" | trans({}, 'SonataUserBundle')}}</h3>
            <h6>EDIT</h6>
            <form action="{{ path('sonata_user_profile_edit') }}" method="POST" class="form-horizontal">
                {{ form_widget(form) }}
                <div class="form-actions">
                    <button type="submit" name="submit"  class="btn text-center">{{ 'sonata_user_submit'|trans({}, 'SonataUserBundle') }}</button>
                </div>
            </form>
        </div>
{% endblock %}