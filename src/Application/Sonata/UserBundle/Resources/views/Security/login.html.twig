{% extends "SonataUserBundle:Security:base_login.html.twig" %}

{% block fos_user_content %}
    {% if app.request.session.get('sonata_basket_delivery_redirect') %}
        {% include 'SonataBasketBundle:Basket:stepper.html.twig' with {step: 'identification'} %}
    {% endif %}

    <div class="row">
        <div class="col-md-6">
            <div class="panel">

                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'title_user_authentication'|trans({}, 'SonataUserBundle') }}</h2>
                </div>

                <div class="panel-body text-center">

                    {% if error %}
                        <div class="alert alert-danger alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
                    {% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post" role="form"
                          class="form-horizontal">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                        <div class="form-group">

                            <div class="col-lg-8 col-sm-8 col-lg-offset-2 col-sm-offset-2"><input type="text" class="input-sm form-control" id="username"
                                                                  name="_username" value="{{ last_username }}"
                                                                  required="required" placeholder="Username"/></div>
                        </div>

                        <div class="form-group control-group">

                            <div class="col-lg-8 col-sm-8 col-lg-offset-2 col-sm-offset-2"><input type="password" class="input-sm form-control" id="password"
                                                                  name="_password" required="required" placeholder="Password"/></div>
                        </div>

                        <div class="form-group" style="margin-bottom: 65px;">
                            <div class="text-right col-lg-8 col-sm-8 col-lg-offset-2 col-sm-offset-2">
                                <div class="checkbox control-group">
                                    <label for="remember_me">
                                        {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                    </label>
                                    <input type="checkbox" style="margin-left:0;" id="remember_me" name="_remember_me" value="on"/>
                                </div>
                            </div>
                        </div>

                        <div class="form-group control-group">
                            <div class="col-lg-8 col-sm-8 col-lg-offset-2 col-sm-offset-2 text-left">
                                <a href="{{ path('fos_user_resetting_request') }}">{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}</a>
                                <button type="submit" id="_submit" name="_submit" class="btn pull-right" style="padding: 0;">
                                    <img src="{{ asset('bundles/cticibour/images/icon_submit.png') }}">
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            {% render controller("FOSUserBundle:Registration:register") %}
        </div>
    </div>
{% endblock fos_user_content %}
