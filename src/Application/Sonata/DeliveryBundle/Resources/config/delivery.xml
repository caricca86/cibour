<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonata.delivery.selector.class">Application\Sonata\Component\Delivery\Selector</parameter>
        <parameter key="sonata.delivery.pool.class">Sonata\Component\Delivery\Pool</parameter>
    </parameters>

    <services>
        <service id="application.sonata.delivery.one_day" class="Application\Sonata\DeliveryBundle\Model\OneDayDelivery">
            <tag name="sonata.delivery.method" />
        </service>
        <service id="application.sonata.delivery.three_days" class="Application\Sonata\DeliveryBundle\Model\ThreeDaysDelivery">
            <tag name="sonata.delivery.method" />
        </service>
        <service id="application.sonata.delivery.seven_days" class="Application\Sonata\DeliveryBundle\Model\SevenDaysDelivery">
            <tag name="sonata.delivery.method" />
        </service>
        <service id="application.sonata.delivery.one_day_take_away" class="Application\Sonata\DeliveryBundle\Model\OneDayTakeAwayDelivery">
            <tag name="sonata.delivery.method" />
        </service>
        <service id="application.sonata.delivery.three_days_take_away" class="Application\Sonata\DeliveryBundle\Model\ThreeDaysTakeAwayDelivery">
            <tag name="sonata.delivery.method" />
        </service>
        <service id="application.sonata.delivery.seven_days_take_away" class="Application\Sonata\DeliveryBundle\Model\SevenDaysTakeAwayDelivery">
            <tag name="sonata.delivery.method" />
        </service>
    </services>
</container>
