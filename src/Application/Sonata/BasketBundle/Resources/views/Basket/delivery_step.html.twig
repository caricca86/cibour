{% block sonata_flash_messages %}
    {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}
{% endblock %}

{% include 'SonataBasketBundle:Basket:stepper.html.twig' with {step: 'delivery'} %}
{% form_theme form 'CTICibourBundle:Form:register_form.html.twig' %}
{% block delivery_step %}
<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 no-pad">
    <form action="{{ url('sonata_basket_delivery') }}" method="POST" >
        <div class="row">
            {% block selected_delivery_address %}
                <div class="col-xs-12 col-md-6 no-pad ">
                    <div class="panel">
                        <div class="panel-heading no-pad">
                            <div class="col-xs-12 col-md-4 no-pad "><hr/></div>
                            <div class="col-xs-12 col-md-4 no-pad "><h2 class="panel-title text-up-bold-2 ">{{ 'sonata.basket.title_address_delivery_step_basket'|trans({}, 'SonataBasketBundle') }}</h2></div>
                            <div class="col-xs-12 col-md-4 no-pad"><hr/></div>
                        </div>
                        <div class="panel-body">
                            {{ sonata_address_render(basket.deliveryaddress) }}
                        </div>
                    </div>
                </div>
            {% endblock %}

            {% block delivery_method_choice %}
                <div class="col-xs-12 col-md-6  ">
                    <div class="panel">
                        <div class="panel-heading no-pad">
                                <div class="col-xs-12 col-md-4 no-pad "><hr/></div>
                                <div class="col-xs-12 col-md-4 no-pad "><h2 class="panel-title text-up-bold-2 ">{{ 'sonata.basket.title_delivery_methods'|trans({}, 'SonataBasketBundle') }}</h2></div>
                                <div class="col-xs-12 col-md-4 no-pad"><hr/></div>
                        </div>
                        <div class="panel-body bill-addr-mob">
                            {{ form_errors(form.deliveryMethod) }}
                            {{ form_widget(form.deliveryMethod) }}
                            {{ form_rest(form) }}
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>

        {% block delivery_submit %}
            <a href="{{ url('sonata_basket_delivery_address') }}" class="btn basket-control text-up-bold-2">{% trans from 'SonataBasketBundle' %}sonata.basket.link_previous_step{% endtrans %}</a>

            <button type="submit" class="btn basket-control pull-right text-up-bold-2">{% trans from 'SonataBasketBundle' %}sonata.basket.link_next_step{% endtrans %}</button>
        {% endblock %}
    </form>
</div>
{% endblock %}