{% block sonata_flash_messages %}
    {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}
{% endblock %}

{% include 'SonataBasketBundle:Basket:stepper.html.twig' with {step: 'billing'} %}
<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 no-pad">
<form action="{{ url('sonata_basket_payment') }}" method="POST" >
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="panel">
                <div class="panel-heading no-pad">
                    <div class="panel-title">
                        <div class="col-xs-12 col-md-2 no-pad "><hr/></div>
                        <div class="col-xs-12 col-md-8 no-pad ">
                            <h2 class="panel-title text-up-bold-2 text-center">{{ 'sonata.basket.title_address_billing_step_basket'|trans({}, 'SonataBasketBundle') }}</h2>
                        </div>
                        <div class="col-xs-12 col-md-2 no-pad "><hr/></div>
                    </div>
                </div>
                <div class="panel-body">
                    {{ sonata_address_render(basket.billingAddress) }}
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel">
                <div class="panel-heading no-pad">
                    <div class="panel-title">
                        <div class="col-xs-12 col-md-2 no-pad "><hr/></div>
                        <div class="col-xs-12 col-md-8 no-pad ">
                            <h2 class="panel-title text-up-bold-2 text-center">{{ 'sonata.basket.title_payment_method'|trans({}, 'SonataBasketBundle') }}</h2>
                        </div>
                        <div class="col-xs-12 col-md-2 no-pad "><hr/></div>
                    </div>
                </div>
                <div class="panel-body pad-bot-top-payment paym-mob">
                    {{ form_errors(form.paymentMethod) }}
                    {{ form_widget(form.paymentMethod) }}
                    {{ form_rest(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <a href="{{ url('sonata_basket_payment_address') }}" class="btn basket-control text-up-bold-2">{% trans from 'SonataBasketBundle' %}sonata.basket.link_previous_step{% endtrans %}</a>

            <button type="submit" class="btn basket-control pull-right text-up-bold-2">{{ 'sonata.basket.btn_update_payment_step'|trans({}, 'SonataBasketBundle') }}</button>
        </div>
    </div>
</form>
</div>