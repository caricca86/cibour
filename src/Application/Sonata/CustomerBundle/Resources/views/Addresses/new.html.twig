{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_title %}{% trans from 'SonataCustomerBundle' %}address_new{% endtrans %}{% endblock %}

{% block sonata_profile_content %}

    {% form_theme form 'CTICibourBundle:Form:basket_form.html.twig' %}
    <div class="col-lg-10 col-sm-10 col-lg-offset-1 col-sm-offset-1 no-pad marg-bot-delivery marg-top-30">
        <div class="col-xs-12 col-md-5 no-pad "><hr class="delivery"></div>
        <div class="col-xs-12 col-md-2 no-pad"><h2 class=" text-center text-up-bold-2 marg-top-delivery"> INDIRIZZO</h2> <h3 class=" text-center text-up-bold-3 marg-top-delivery">edit</h3></div>
        <div class="col-xs-12 col-md-5 no-pad"><hr class="delivery"></div>
    </div>
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    {{ form_rest(form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-success pull-right">{{ 'sonata.customer.address.save'|trans({}, 'SonataCustomerBundle') }}</button>
    </div>
{{ form_end(form) }}

{% endblock %}
