<tr>
    <td>
        <div class="col-sm-2 hidden-xs">
        {% block product_thumbnail %}
            {% thumbnail basketElement.product.image, 'slider' with {'itemprop':'image', 'alt': basketElement.product.name, 'title': basketElement.product.name, 'class': 'img-responsive'} %}
        {% endblock %}
        </div>
        <div class="col-sm-10">
            {% block product_name %}
                <strong>{{ basketElement.name }}</strong>
            {% endblock %}
            {% block product_sku %}
                <p>{{ 'sonata.product.sku'|trans([], 'SonataProductBundle') }}: {{ basketElement.product.sku }}</p>
            {% endblock %}
            {% block product_variations %}{% endblock %}
        </div>
    </td>
    <td class="text-center">
        {% block product_unit_price %}
            {{ basketElement.getUnitPrice(true)|number_format_currency(basket.currency.label, {}, {}, basket.locale) }}
        {% endblock %}
    </td>
    <td class="text-center">
        {% block product_quantity %}
            {{ basketElement.quantity }}
        {% endblock %}
    </td>
    <td class="text-center">
        {% block product_total %}
            {{ basketElement.getTotal(true)|number_format_currency(basket.currency.label, {}, {}, basket.locale) }}
        {% endblock %}
    </td>
</tr>
